        <LinearLayout
            android:id="@+id/main_workout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/spinner2"
            android:orientation="vertical"></LinearLayout>

        <Button
            android:id="@+id/edit_workout"
